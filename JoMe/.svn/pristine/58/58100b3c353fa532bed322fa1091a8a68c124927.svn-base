<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation" >

        <Button
            android:id="@+id/btnaddvenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cross_icon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="Page-Create"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/add_icon" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_below="@+id/third"
        android:orientation="vertical" 
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout 
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
             android:background="@drawable/event_name_bg"
           >
            <TextView 
                android:id="@+id/firstText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginRight="10dp"
                 android:paddingLeft="5dp"
                 android:paddingTop="3dp"
                 android:textStyle="normal">
                
            </TextView>
           "
        </LinearLayout>
         <LinearLayout 
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/event_name_bg"
            android:layout_marginTop="10dp"
           >
            <TextView 
                android:id="@+id/secondText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Discription"
                 
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginRight="10dp"
                 android:paddingLeft="7dp"
                 android:paddingTop="3dp"
                 android:textStyle="normal">
                
            </TextView>
           
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:background="@drawable/event_name_bg"
            
             android:layout_marginTop="10dp"
           >
            <TextView 
              android:id="@+id/textview"                
              android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="5dp"
                 android:textStyle="normal">
                
            </TextView>
             <TextView 
              android:id="@+id/text"                
              android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: Today 9pm or set"
                android:layout_below="@+id/textview"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="5dp"
                 android:textStyle="normal">
                
            </TextView>
            

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="Add"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="5dp"
                
                android:textStyle="normal" />
           
        </RelativeLayout>
        <LinearLayout 
            android:id="@+id/ttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:background="@drawable/event_name_bg"
             android:layout_marginTop="10dp"
           >
            <TextView 
                android:id="@+id/secon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite setting Nearby"
                
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginRight="10dp"
                 android:paddingLeft="7dp"
                 android:paddingTop="3dp"
                 android:textStyle="normal">
                
            </TextView>
           
        </LinearLayout>
       
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tabbar"
        android:gravity="bottom"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>