	          {
	              switch(requestCode) {
	              case EVENT_PAGE2:
	                  if (resultCode == RESULT_OK) {
	                      
	                      Bundle bundle = data.getExtras();
	                      
	                      txtshowtime.setText(bundle.getString("txtshowtime"));
