<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg_round"
        android:padding="20dp" >
        
        <TextView
            android:id="@+id/item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jang HuJong"
            android:textColor="#3099b9"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_username"
            android:layout_marginTop="20dp"
            android:text="Message"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/item_reply_btn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_message"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_lets_jo_sel"
            android:text="Reply"
            android:textColor="#ffffff"
            android:textSize="30sp" />
        
         <TextView
             android:id="@+id/item_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@id/item_username"
             android:layout_marginLeft="30dp"
             android:layout_toRightOf="@id/item_username"
             android:text="2014-8-22"
             android:textColor="#000000"
             android:textSize="25sp" />
        
    </RelativeLayout>

</RelativeLayout>
